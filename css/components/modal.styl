.modal {
    position: fixed;
    top: 0;
    padding: 15px;
    z-index: 999;
    background: rgba(0,0,0,0.63);
    width: 100%;
    left: 0;
    right: 0; 
    overflow: scroll;
    display: none;
    -webkit-box-align: center;
    -moz-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 100%;
    .form {
        max-width: 710px;
        margin: auto;
        padding: 20px;
        position: relative;
        background: #fff;
    }
    &.active {
        display: flex;
    }
}

.btn-close {
    position: absolute;
    top: -10px;
    right: -10px;
    background: red;
    height: 40px;
    width: 40px;
    line-height: 38px;
    text-align: center;
    border-radius: 50%;
    color: #fff;
}