.plan {
	background: #f3f3f3;
    h2 {
    	color: #5a5a5a;
    }
    .sub-text {
		color: #5a5a5a;
		margin: 20px auto 40px auto;
		max-width: 730px;
    }
	&-header {
		padding: 10px 15px 50px 15px;
		border-bottom: 1px solid #d0d0d0;
		margin-bottom: 50px;
		background: rgb(145, 220, 90);
		position: relative;
		p {
			font-size: 14px;
		}
		.value, h3, p {
			color: #fff;
		}
		.icon {
			position: absolute;
			background: white;
			left: 0;
			right: 0;
			width: 60px;
			height: 60px;
			border-radius: 50%;
			padding: 11px;
			margin: auto;
			bottom: -30px;
			border: 2px solid #ededed;
			padding-left: 7px;
		}
	}
	select {
		max-width: 180px;
		margin: auto;
	}
	&-item {
		margin-bottom: 20px;
		position: relative;
	    border-radius: 4px;
	    h3 {
		    text-transform: uppercase;
		    margin-top: 20px;
			font-weight: normal;
	    }
		.plan-value {
			p {
				display: inline-block;
				margin-bottom: 0;
			}
			.value-self {
				font-size: 50px;
				span {
					font-size: 16px;
				}
			}
		}

	    ul {
	    	text-align: left;
			padding: 0 15px 15px 15px;
	    	li {
	    		margin-bottom: 10px;
				color: #5a5a5a;
	    		.fa {
	    			color: #91dc5a;
	    			font-size: 18px;
				    text-align: center;
				    margin-right: 5px;
	    		}
	    		&.no-has {
					color: #ababab;
	    			.fa {
	    				color: #ababab;
	    			}
	    		}
	    	}
	    }
	    .recomendado {
		    width: 120px;
		    height: 120px;
		    position: absolute;
		    top: -12px;
		    right: -8px;
		    overflow: hidden;
		    &:after {
			    content: 'Recomendado';
			    position: absolute;
			    background: #2689c5;
			    width: 180px;
			    height: 25px;
			    top: 30px;
			    right: -49px;
			    border-bottom: 2px solid #295b79;
			    line-height: 25px;
			    color: #fff;
			    -webkit-transform: rotate(45deg);
			    transform: rotate(45deg);
			    font-size: 12px;
			    text-transform: uppercase;	
		    }
	    }

	}
	@media (min-width: md) {
		.featured {
			position: relative;
			top: -30px;
		}
		.sub-text {
			margin-bottom: 60px;
		}
	}
}

.pricing {
	position: relative;
	overflow: hidden;
	background: #f6f6f6;
	.container {
		z-index: 1;
	}
	&-details {
		h2 {
			font-size: 70px;
			line-height: 1;
			color: #dc5a5a;
			span {
				font-size: 14px;
			}
