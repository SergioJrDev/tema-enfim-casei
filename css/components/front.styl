.home {
	header {
		position: absolute;
		width: 100%;
		@media (min-width: sm) {
			background: none; 
		}
	}
}

.intro {
	bg-image(cover, left, '../../img/garden.jpg');
	height: 500px;
	.title-section {
		color: #fff;
	    font-size: 2rem;
	    color: #fff;
	    margin-bottom: 10px;
	    text-transform: none;
		max-width: 350px;
		line-height: 1.3;
	}
	.container {
		height: 100%;
	}
	p {
		color: #fff;
		max-width: 500px; 
	}
	@media (min-width: sm) {
		background-position: center;
	}
	.form {
	    max-width: 350px;
	    background: rgb(255, 255, 255);
	    padding: 15px;
	    border-top: 5px solid #47a6e0;
	    border-radius: 4px;
	    margin: 0 auto;
	    .label {
			font-weight: normal;
			margin-bottom: 5px;
			font-size: 14px;
			line-height: 1;
			display: block;
	    }
		.input, input {
			padding: 4px 5px;
		}
		.input-group {
			margin-bottom: 10px;
		}
	    .title, p {
		    color: #585858;
		    text-align: center;
		    margin-bottom: 15px;
		    font-size: 14px;
		    text-transform: uppercase;
		    font-weight: bold;
	    }
	    p {
	    	font-size: 12px;
			margin-bottom: 5px;
	    }
	    a {
	    	text-align: center;
	    	display: block;
			margin: 0px;
			width: 100%;
			max-width: 100%;
			font-size: 14px;
			text-align: center;
	    }
		.css-fbl {
			margin-bottom: 10px;
		}
	}
	@media (max-width: max_sm) {
		.hide-sm {
			display: none;
		}
	}
}

.tab-bottom {
	position: relative;
	margin-bottom: 40px;
	&:after {
		position: absolute;
		content: '';
		width: 40px;
		height: 3px;
		background: color_theme;
		left: 0;
		bottom: -12px;
	}
}

.title-descr {
    color: #5a5a5a;
    font-size: 30px;
    font-weight: bold;
    line-height: 1.3;
}
	
.featured {
	.svg-icons {
	    display: flex;
	    align-items: center;
	    max-width: 500px;
	    margin: 0 auto;
		svg {
			width: 100%;
		    max-width: 90px;
		    margin: 0 auto;
		    position: relative;
		}
		.fa {
			color: color_theme;
			font-size: 24px;
		}
		@media (max-width: max_xs) {
