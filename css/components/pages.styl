/*Valores*/

.featured {
	&-list {
		li {
			.fa {
				font-size: 7px;
				position: relative;
				top: -4px;
				color: #727272;
			}
		}
	}
	&-value {
		font-size: 60px;
		font-weight: bold
		line-height: 1;
		span {
			font-size: 20px;
		}
	}
	
	.p-value {
		background: red;
	}

	@media (min-width: sm) {
		&-list {
			column-count: 2;
		}
	}
}